# Server
PORT=3000
NODE_ENV=development

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Toss API
TOSS_API_BASE_URL=https://apps-in-toss-api.toss.im

# Client Certificate (방법 1: 파일 경로)
TOSS_CLIENT_CERT_PATH=./certs/client-cert.pem
TOSS_CLIENT_KEY_PATH=./certs/client-key.pem

# Client Certificate (방법 2: Base64 인코딩 - Railway 등에서 사용)
# TOSS_CLIENT_CERT_BASE64=your_base64_encoded_cert
# TOSS_CLIENT_KEY_BASE64=your_base64_encoded_key

# Toss Decryption
TOSS_DECRYPT_KEY=your_base64_encoded_decrypt_key
TOSS_AAD=TOSS
